using System;
class Program
{
    static void Main()
    {
    int i = 0;
    while(i == 0){
        Console.WriteLine("\nBem vindo ao menu!");
        Console.WriteLine("Escolha uma cor:");

        Console.WriteLine("\n\n1- Vermelho.");
        Console.WriteLine("\n\n2- Azul.");
        Console.WriteLine("\n\n3- Verde.");
        Console.WriteLine("\n\n4- Sair.");
        
        int menu = int.Parse(Console.ReadLine());
        switch(menu)
        {
        case 1 :
            Console.Clear();
            Console.WriteLine("Você escolheu a cor vermelho.");
            break;

        case 2 :
            Console.Clear();
            Console.WriteLine("Você escolheu a cor azul.");
            break;

        case 3 : 
            Console.Clear();
            Console.WriteLine("Você escolheu a cor verde.");
            break;
        case 4 : 
            Console.Clear();
            Console.WriteLine("Você escolheu sair.");
            i = 1;
            break;
        }
        }
    }
}
