using System;

class Program
{
    public static void Main(string[] args)
    {
        Console.Write("Escreva um número: ");
        float num1 = float.Parse(Console.ReadLine());

        string resultado = num1 > 0 ? "positivo" : (num1 < 0 ? "negativo" : "zero");

        Console.WriteLine("O número {0} é {1}.", num1, resultado);
    }
}
