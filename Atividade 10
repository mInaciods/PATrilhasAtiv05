using System;
class Program
{
    static void Main()
    {
        int i = 0;
        while (i == 0)
        {
            Console.WriteLine("\nBem vindo ao menu!");
            Console.WriteLine("Escolha um tamanho de camisa:");
            Console.WriteLine("\n1- P.");
            Console.WriteLine("2- M.");
            Console.WriteLine("3- G.");
            Console.WriteLine("4- Sair.");

            int menu = int.Parse(Console.ReadLine());

            switch (menu)
            {
                case 1:
                    Console.Clear();
                    Console.WriteLine("Você escolheu o tamanho P, o preço é R$ 50,00 .");
                    break;
                case 2:
                    Console.Clear();
                    Console.WriteLine("Você escolheu o tamanho M, o preço é R$ 60,00 .");
                    break;
                case 3:
                    Console.Clear();
                    Console.WriteLine("Você escolheu o tamanho G, o preço é R$ 70,00 .");
                    break;
                case 4:
                    Console.Clear();
                    Console.WriteLine("Você escolheu sair.");
                    i = 1;
                    break;
                default:
                    Console.Clear();
                    Console.WriteLine("Opção inválida, tente novamente.");
                    break;
            }
        }
    }
}
