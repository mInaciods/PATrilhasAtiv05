using System;
  class Program
  {
      static void Main()
      {
          int num = 0;
          int resultado = 0;

          while (num >= 0)
          {    
              Console.Write("\nEscreva um número: ");
              num = int.Parse(Console.ReadLine());
              resultado += num >= 0 ? num : 0;
          }

          Console.Write("O resultado é {0}", resultado);
      }
  }
